# RunPod Service Configuration

# Service settings
SERVICE_PORT=8000
SERVICE_HOST=0.0.0.0
WORKERS=1

# Model settings
TEXT_DETECTION_CONFIDENCE=0.7
NSFW_DETECTION_CONFIDENCE=0.85
AUDIO_PROFANITY_CONFIDENCE=0.8

# Performance settings
FRAME_SAMPLE_RATE=1  # Process every Nth frame (1 = all frames, 3 = every 3rd frame)
MAX_CONCURRENT_STREAMS=5
GPU_MEMORY_FRACTION=0.9

# Processing modes
ENABLE_TEXT_DETECTION=true
ENABLE_NSFW_DETECTION=true
ENABLE_AUDIO_PROFANITY=true
ENABLE_OBJECT_TRACKING=true

# Blur settings
BLUR_KERNEL_SIZE=51
BLUR_SIGMA=25
BLUR_PADDING=10  # Extra pixels around detected region

# Tracking settings
TRACKER_TYPE=CSRT  # Options: CSRT, KCF, MOSSE
TRACKER_MAX_AGE=30  # Maximum frames to track without detection
PREDICTION_FRAMES=3  # Frames ahead to predict position

# OpenAI API (for Whisper if using cloud version)
OPENAI_API_KEY=

# Redis cache (optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Logging
LOG_LEVEL=INFO
LOG_DETECTIONS=true
LOG_PATH=/app/logs
