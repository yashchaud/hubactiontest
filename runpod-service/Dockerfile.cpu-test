# CPU-Only Testing Dockerfile for 2GB GPU Machines
# This runs on CPU fallback - slower but tests all functionality

FROM python:3.10-slim

ENV DEBIAN_FRONTEND=noninteractive
ENV PYTHONUNBUFFERED=1

# Install system dependencies
RUN apt-get update && apt-get install -y \
    ffmpeg \
    libsm6 \
    libxext6 \
    libxrender-dev \
    libglib2.0-0 \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy requirements
COPY requirements.txt .

# Install Python dependencies (CPU versions)
RUN pip3 install --no-cache-dir -r requirements.txt && \
    pip3 install --force-reinstall --no-cache-dir "numpy>=1.26.0,<2.0.0"

# Copy application code
COPY . .

# Create directories
RUN mkdir -p /app/models /app/temp

EXPOSE 8000

# Extended health check for model downloads
HEALTHCHECK --interval=30s --timeout=10s --start-period=300s --retries=3 \
    CMD python3 -c "import requests; requests.get('http://localhost:8000/health', timeout=5)" || exit 1

# Run with single worker (CPU)
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000", "--workers", "1"]
